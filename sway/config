for_window [title="Firewall"] floating enable
for_window [title="Signal" class="Signal"] floating enable, move scratchpad, scratchpad show
for_window [title="Authy" class="Chromium"] floating enable
for_window [class="keepassxc"] floating enable
for_window [class="zoom"] floating enable
for_window [class="lxqt-openssh-askpass"] floating enable

# Read `man 5 sway-bar` for more information about this section.
bar {
	# status_command while :; do date +'%a %d %b, %H:%M'; sleep 30; done
	status_command /opt/synaptiko-desktop-status/bar.sh
	position bottom
	height 25
	colors {
		statusline #ebdbb2
		background #1d2021
		focused_workspace #458588 #458588 #1d2021
		inactive_workspace #1d2021 #1d2021 #ebdbb2
		# FIXME jprokop: finish following colors
		# active_workspace
		# urgent_workspace
	}
}

include ~/.config/sway/config.d/*

