# vim:filetype=dosini
[colors]
bg = #f71d2021
; bg = #1d2021
fg = #ebdbb2
focused = #458588
visible = #5f676a
urgent = #cc241d
alert = #d79921

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 27
bottom = true
radius = 0.0
fixed-center = false

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3

border-size = 0

separator = |

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = "Iosevka Term SS03 Medium:size=11;3"

enable-ipc = true

[bar/main-jprokop]
inherit = bar/base
modules-left = is-recording i3
modules-center = 
modules-right = pacman volume time-track date

height = 25

tray-position = right
tray-padding = 2

[bar/main-jprokop-op790]
inherit = bar/main-jprokop

height = 27

[bar/main-jprokop-tp13]
monitor = ${env:MONITOR}
inherit = bar/base
modules-left = is-recording i3
modules-center = 
modules-right = wifi openvpn battery pacman volume time-track date

tray-position = right
tray-padding = 2

height = 24

[bar/external-jprokop-tp13]
monitor = ${env:MONITOR}
inherit = bar/base
modules-left = is-recording i3
modules-center = 
modules-right = openvpn pacman volume time-track date

height = 24

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
enable-scroll = false
enable-click = false
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.bg}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.focused}
label-focused-underline = ${colors.focused}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 1
label-visible-foreground = ${colors.bg}
label-visible-background = ${colors.visible}
label-visible-underline = ${colors.visible}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-padding = 1
label-urgent-foreground = ${colors.bg}
label-urgent-background = ${colors.urgent}
label-urgent-underline = ${colors.urgent}

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 15
format-connected = <label-connected> <ramp-signal>
format-disconnected = <label-disconnected>
label-connected = Dw%downspeed% Up%upspeed% [%essid%]
label-connected-foreground = #666
ramp-signal-foreground= #666
ramp-signal-0 = 0%
ramp-signal-1 = ~20%
ramp-signal-2 = ~40%
ramp-signal-3 = ~60%
ramp-signal-4 = ~80%
ramp-signal-5 = ~100%
label-disconnected = No Wifi
label-diconnected-foreground = #666

[module/openvpn]
type = custom/script
exec = pgrep openvpn
interval = 15
label = OpenVPN
format-prefix = VPN

[module/pacman]
type = custom/script
interval = 1200
format = <label>
label = "%output%"
format-prefix = "U "
exec = "~/.files/polybar/check-updates.sh"

[module/time-track]
type = custom/script
interval = 60
format = <label>
label = "%output%"
format-prefix = "T "
exec = "~/Documents/todo/time-track.js"

[module/battery]
type = internal/battery
full-at = 99
battery = BAT1
adapter = ADP1
poll-interval = 30
time-format = %H:%M
format-charging = Battery++ <label-charging>
format-discharging = Battery-- <label-discharging>
label-charging = %percentage%% (%time%)
label-discharging = %percentage%% (%time%)

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume = "V %percentage%%"
label-volume-foreground = ${root.foreground}

format-muted = <label-muted>
label-muted = "M %percentage%%"
format-muted-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 1
date = %a %d %b,
time = %H:%M
date-alt = %Y-%m-%d
time-alt = %H:%M:%S
label = "%date% %time% "

[module/is-recording]
type = custom/ipc
hook-0 = echo
hook-1 = echo " R"
format-foreground = ${colors.urgent}
initial = 1
